<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/shoplist_location1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Location"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/shoplist_unitpricechild1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:hint="Unit Price"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/shoplist_select1"
            app:layout_constraintStart_toEndOf="@+id/shoplist_location1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/shoplist_select1"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="SELECT"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/shoplist_location2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:hint="Location"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shoplist_location1" />

        <EditText
            android:id="@+id/shoplist_unitpricechild2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:hint="Unit Price"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/shoplist_select2"
            app:layout_constraintStart_toEndOf="@+id/shoplist_location2"
            app:layout_constraintTop_toBottomOf="@id/shoplist_unitpricechild1" />

        <Button
            android:id="@+id/shoplist_select2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="SELECT"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shoplist_select1"/>

        <EditText
            android:id="@+id/shoplist_location3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:hint="Location"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shoplist_location2" />

        <EditText
            android:id="@+id/shoplist_unitpricechild3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="2dp"
            android:hint="Unit Price"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/shoplist_select3"
            app:layout_constraintStart_toEndOf="@+id/shoplist_location3"
            app:layout_constraintTop_toBottomOf="@id/shoplist_unitpricechild2" />

        <Button
            android:id="@+id/shoplist_select3"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="SELECT"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shoplist_select2" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>